<div class="mobile-search d-md-none px-3 mt-2" id="mobileSearch">
  <form class="d-flex justify-content-center" role="search">
    <input class="form-control me-2 search-inp" type="search" placeholder="Search destinations" style="width: 90%;" />
    <button class="btn search-btn" type="submit">
      <i class="fa-solid fa-magnifying-glass"></i>Search
    </button>
  </form>
</div>  
<!-- Floating search FAB for mobile -->
<button class="search-fab d-md-none" id="searchFab">
  <i class="fa-solid fa-magnifying-glass"></i>
</button>
<script>
  const searchFab = document.getElementById("searchFab");
  const mobileSearch = document.getElementById("mobileSearch");

  // Only one event listener is needed
  searchFab.addEventListener("click", () => {
    mobileSearch.classList.toggle("active");
  });
</script>
